<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initial_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.truskills.liveexams.ParticularExamStatistics.InitialInfo"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:id="@+id/tableLayout"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:text="DATE"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/dateText"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:id="@+id/dateValue"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:text="START TIME"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/startTimeText"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:id="@+id/startTimeValue"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="END TIME"
                android:layout_weight="1"
                android:id="@+id/endTimeText"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:id="@+id/endTimeValue"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:text=""
                android:layout_weight="1" />

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:text=""
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:text="TOTAL MARKS"
                android:layout_weight="1"
                android:id="@+id/totalMarksText"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:text=":"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:padding="2dp"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:id="@+id/totalMarksValue"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tableLayout"
        android:background="@color/black"
        android:id="@+id/break1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/break1"
            android:id="@+id/rankLayout"
            android:layout_centerHorizontal="true"
            android:weightSum="100">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:src="@drawable/rank_icon"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="40dp"
                        android:id="@+id/myRank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalRank"
                        android:textSize="20dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="RANK"
                    android:id="@+id/rankText"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rankLayout"
            android:background="@color/black"
            android:id="@+id/break2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/break2"
            android:id="@+id/scoreLayout"
            android:layout_centerHorizontal="true"
            android:weightSum="100">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:src="@drawable/score_icon"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="40dp"
                        android:id="@+id/myScore"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalScore"
                        android:textSize="20dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="SCORE"
                    android:id="@+id/scoreText"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/scoreLayout"
            android:background="@color/black"
            android:id="@+id/break3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>



    </RelativeLayout>
    </ScrollView>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="ANSWER KEY AND EVALUATION"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/answerKeyButton"/>



</RelativeLayout>
